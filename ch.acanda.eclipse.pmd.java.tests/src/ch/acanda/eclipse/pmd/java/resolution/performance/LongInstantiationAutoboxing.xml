<tests>
    <pmdReferenceId>category/java/performance.xml/LongInstantiation</pmdReferenceId>
    <language>java 1.8</language>

    <test name="LongInstantiationWithLongArgument">
        <setup>
            <source>
public class LongInstantiation {

    Long i = <marker>new Long(123)</marker>;

}
            </source>
        </setup>
        <expected>
            <source>
public class LongInstantiation {

    Long i = 123;

}
            </source>
            <image>QUICKFIX_CHANGE</image>
            <label>Use autoboxing</label>
            <description>Replaces the Long instantiation with &lt;b>123&lt;/b>.</description>
        </expected>
    </test>

    <test name="LongInstantiationWithExpressionArgument">
        <setup>
            <source>
public class LongInstantiation {

    Long i = <marker>new Long(123 + 4)</marker>;

}
            </source>
        </setup>
        <expected>
            <source>
public class LongInstantiation {

    Long i = 123 + 4;

}
            </source>
            <image>QUICKFIX_CHANGE</image>
            <label>Use autoboxing</label>
            <description>Replaces the Long instantiation with &lt;b>123 + 4&lt;/b>.</description>
        </expected>
    </test>

</tests>