<tests>
    <pmdReferenceId>category/java/errorprone.xml/EmptyFinallyBlock</pmdReferenceId>
    <language>java 1.7</language>

    <test name="EmptyFinallyBlockWithCatch">
        <setup>
            <source>
class Example {
    void foo() {
        try {
            bar();
        } catch (Exception e) {
            log(e);
        } <marker>finally {
        }</marker>
    }
}
            </source>
        </setup>
        <expected>
            <source>
class Example {
    void foo() {
        try {
            bar();
        } catch (Exception e) {
            log(e);
        }
    }
}
            </source>
            <image>QUICKFIX_REMOVE</image>
            <label>Remove the finally block</label>
            <description>Removes the empty finally block.</description>
        </expected>
    </test>

    <test name="EmptyFinallyBlockWithoutCatch">
        <setup>
            <source>
class Example {
    void foo() {
        try {
            bar();
        } <marker>finally {
        }</marker>
    }
}
            </source>
        </setup>
        <expected>
            <source>
class Example {
    void foo() {
        bar();
    }
}
            </source>
            <image>QUICKFIX_REMOVE</image>
            <label>Remove the finally block</label>
            <description>Removes the empty finally block.</description>
        </expected>
    </test>

</tests>
