            <repositories>
                <repository>
                    <id>2019-03</id>
                    <layout>p2</layout>
                    <url>http://download.eclipse.org/releases/2019-03/</url>
                </repository>
                <repository>
                    <id>swtbot</id>
                    <layout>p2</layout>
                    <url>http://download.eclipse.org/technology/swtbot/releases/2.7.0/</url>
                </repository>
            </repositories>
        </profile>

    </profiles>

    <developers>
        <developer>
            <name>Philip Graf</name>
            <roles>
                <role>Owner</role>
