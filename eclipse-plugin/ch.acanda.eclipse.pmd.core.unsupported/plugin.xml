<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.ui.propertyPages">
      <page
            class="ch.acanda.eclipse.pmd.core.unsupported.PMDPropertyPage"
            icon="icons/warning.gif"
            id="ch.acanda.eclipse.pmd.core.unsupported.PMDPropertyPage"
            name="PMD"
            nameFilter="*">
         <enabledWhen>
            <adapt type="org.eclipse.core.resources.IProject">
               <test property="ch.acanda.eclipse.pmd.core.unsupported.javaVersionLessThan"
                     args="1.8"
                     forcePluginActivation="true" />
            </adapt>
         </enabledWhen>
      </page>
   </extension>
   
   <extension point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="ch.acanda.eclipse.pmd.core.unsupported.ProjectPropertyTester"
            id="ch.acanda.eclipse.pmd.core.unsupported.project"
            namespace="ch.acanda.eclipse.pmd.core.unsupported"
            properties="javaVersionLessThan"
            type="org.eclipse.core.resources.IProject" />
   </extension>

</plugin>
